<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.championsapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icono_champions"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activites.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activites.ListaPartidos"
            android:screenOrientation="portrait" />
        <activity android:name=".activites.DetallePartido"
            android:screenOrientation="portrait" />
        <activity android:name=".activites.DetalleEquipo"
            android:screenOrientation="portrait" />
        <activity android:name=".activites.DetalleJugador"
            android:screenOrientation="portrait" />
        <activity android:name=".activites.DetalleEntrenador"
            android:screenOrientation="portrait" />

    </application>

</manifest>