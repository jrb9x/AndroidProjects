<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView">

    <LinearLayout
        android:id="@+id/activity_cuarto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.championsapp.activites.DetalleEquipo"
        android:weightSum="1">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            card_view:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/imagen_estadio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/camp_nou"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="#8c000000"
                android:text="EQUIPO"
                android:textColor="#ffe3e3e3"
                android:textSize="25sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#8c000000"
                android:text="ESTADIO"
                android:textColor="#ffe3e3e3"
                android:textSize="25sp"
                android:textStyle="normal|bold" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="ESCUDO"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"/>

        <ImageView
            android:id="@+id/imagen_escudo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_fcb"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="ENTRENADOR"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold" />

        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            card_view:cardCornerRadius="6dp"
            card_view:cardUseCompatPadding="true"
            android:id="@+id/entrenador">

            <ImageView
                android:id="@+id/imagen_entrenador"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_en_barcelona"
                android:layout_marginBottom="5dp"/>/>

            <TextView
                android:id="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#8c000000"
                android:padding="2dp"
                android:text="Luis Enrique"
                android:textAlignment="center"
                android:textColor="#ffe3e3e3"
                android:textSize="12sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JUGADORES"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold" />

        <GridView
            android:id="@+id/grid_jugadores"
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:columnWidth="150dp"
            android:gravity="center"
            android:horizontalSpacing="5dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" />

    </LinearLayout>
</ScrollView>