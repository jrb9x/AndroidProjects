<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_grid"
        android:rowCount="4">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_fcb"
            android:id="@+id/imagen_local"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="230dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:weightSum="1"
            android:layout_row="0"
            android:layout_column="1">

            <TextView
                android:text="Equipo Local"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/equipo_local"
                android:textAlignment="center" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fecha"
                    android:text="14/03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/hora"
                    android:text="20:45"
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/equipo_visitante"
                android:text="Equipo Visitante"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textAlignment="center" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_psg"
            android:id="@+id/imagen_visitante"
            android:layout_marginTop="20dp"/>

    </GridLayout>
</LinearLayout>